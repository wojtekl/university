<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net.hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.rhcloud.javawojtekel.pinezki.ModelUzytkownik" table="Uzytkownicy">
        <id name="identyfikator" type="int" column="Identyfikator">
            <generator class="native" />
        </id>
        <property name="email" column="EMail" type="java.lang.String" not-null="true" unique="true" length="255" />
        <property name="haslo" column="Haslo" type="java.lang.String" not-null="true" length="255" />
        <property name="czasStworzenia" column="CzasStworzenia" type="long" not-null="true" />
        <property name="czasWaznosci" column="CzasWaznosci" type="long" not-null="true" />
    </class>
</hibernate-mapping>

