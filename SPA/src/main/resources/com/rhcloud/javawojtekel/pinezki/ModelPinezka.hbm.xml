<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net.hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.rhcloud.javawojtekel.pinezki.ModelPinezka" table="Pinezki">
        <id name="identyfikator" type="int" column="Identyfikator">
            <generator class="native" />
        </id>
        <property name="nazwa" column="Nazwa" type="java.lang.String" not-null="true" length="255" />
        <property name="szerokosc" column="Szerokosc" type="double" not-null="true" />
        <property name="dlugosc" column="Dlugosc" type="double" not-null="true" />
        <property name="czasAktualizacji" column="CzasAktualizacji" type="long" not-null="true" />
        <many-to-one name="uzytkownik" column="Uzytkownik" class="com.rhcloud.javawojtekel.pinezki.ModelUzytkownik" not-null="true" />
    </class>
</hibernate-mapping>

