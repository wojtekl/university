<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/etNazwaZdjO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/bPowrotZdjO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powrot"
            android:onClick="onClickZamknijDialog" />

        <Button
            android:id="@+id/bZapiszZdjO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickWyslij"
            android:text="Wyslij" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivFotoO"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

</LinearLayout>
