<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvImieDialogP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imie" />

    <EditText
        android:id="@+id/etImieDialogP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tvNazwiskoDialpgP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nazwisko" />

    <EditText
        android:id="@+id/etNazwiskoDialogP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tvHasloDialogP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="haslo" />

    <EditText
        android:id="@+id/etHasloDialogP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/bAnulujDaneDialogP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:onClick="Anuluj"
            android:text="@string/Anuluj" />

        <Button
            android:id="@+id/bZatwierdzDaneDialogP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.47"
            android:onClick="Zatwierdz"
            android:text="@string/OK" />

    </LinearLayout>

</LinearLayout>